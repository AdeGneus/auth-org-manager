{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "express", "config", "morgan", "jsonwebtoken", "uuid"]
  },
  "types": ["node", "ts-node"],
  "include": [
    "src",
    "index.ts",
    "node_modules/ts-node/**/*",
    "config",
    "prisma/**/*"
  ]
}
