{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  },
  "types": [
    "node",
    "ts-node",
    "express",
    "config",
    "morgan",
    "jsonwebtoken",
    "uuid"
  ],
  "include": [
    "src",
    "index.ts",
    "node_modules/ts-node/**/*",
    "config",
    "prisma/**/*"
  ]
}
